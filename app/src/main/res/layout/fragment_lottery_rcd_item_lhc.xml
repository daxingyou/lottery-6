<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ssc_expect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/ssc_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ssc_expect"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_14_sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:layout_marginTop="10dp"
        android:gravity="center_vertical"
        android:orientation="horizontal"
        android:paddingEnd="2dp">


        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_one_tv"
                style="@style/rcd_item_SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_one_tv"
                style="@style/lhc_animal_style" />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_two_tv"
                style="@style/rcd_item_SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_two_tv"
                style="@style/lhc_animal_style" />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_three_tv"
                style="@style/rcd_item_SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_three_tv"
                style="@style/lhc_animal_style" />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_four_tv"
                style="@style/rcd_item_SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_four_tv"
                style="@style/lhc_animal_style" />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_five_tv"
                style="@style/rcd_item_SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_five_tv"
                style="@style/lhc_animal_style" />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_six_tv"
                style="@style/rcd_item_SmTvStytle" />

            <TextView
                android:id="@+id/lhc_animal_six_tv"
                style="@style/lhc_animal_style" />
        </LinearLayout>

        <LinearLayout style="@style/lhc_layout_style">

            <TextView
                android:id="@+id/lhc_ball_seven_tv"
                android:layout_width="32dp"
                android:layout_height="32dp"
                android:layout_marginBottom="4dp"
                android:layout_marginEnd="-10dp"
                android:layout_marginStart="-10dp"
                android:gravity="center"
                android:text="+"
                android:textColor="@color/black"
                android:textSize="28dp"
                android:visibility="visible" />

            <TextView
                android:id="@+id/lhc_animal_seven_tv"
                style="@style/lhc_animal_style"

                android:visibility="invisible" />
        </LinearLayout>


        <FrameLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-2dp">

            <LinearLayout style="@style/lhc_layout_style">

                <View
                    android:layout_width="1dp"
                    android:layout_height="8dp" />

                <TextView
                    android:id="@+id/plhc_ball_eight_tv"
                    style="@style/rcd_item_SmTvStytle" />

                <TextView
                    android:id="@+id/lhc_animal_eight_tv"
                    style="@style/lhc_animal_style"

                    android:visibility="visible" />

                <View
                    android:layout_width="1dp"
                    android:layout_height="6dp" />
            </LinearLayout>

            <TextView
                android:id="@+id/t_small"
                android:layout_width="14dp"
                android:layout_height="14dp"
                android:layout_gravity="end"
                android:layout_marginEnd="8dp"
                android:background="@drawable/shape_ball_green"
                android:gravity="center"
                android:text="T"
                android:textColor="@color/white"
                android:textSize="9dp" />
        </FrameLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="-6dp"
            android:orientation="vertical">

            <TextView
                android:id="@+id/t_big"
                android:layout_width="18dp"
                android:layout_height="18dp"
                android:background="@drawable/shape_corn_bg_green"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:text="T"
                android:textColor="@color/white"
                android:textSize="9dp" />

            <TextView
                style="@style/lhc_animal_style"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="é¸¡"
                android:visibility="invisible"/>

        </LinearLayout>
    </LinearLayout>

</LinearLayout>