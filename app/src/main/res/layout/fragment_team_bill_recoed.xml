<?xml version="1.0" encoding="utf-8"?>
<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bgColor" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="49dp"
            android:background="@color/bgColor"
            android:orientation="horizontal">


            <TextView
                android:id="@+id/tv_before_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_1"
                android:text="前一天"
                android:textSize="@dimen/text_12_sp" />


            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/bgColor" />


            <RelativeLayout
                android:id="@+id/day_before_rlg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone">

            </RelativeLayout>


            <RelativeLayout
                android:id="@+id/rl_choose_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1.2"
                android:background="@color/white"
                android:orientation="horizontal"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_1">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerVertical="true"
                    android:layout_marginStart="19dp"
                    android:gravity="center"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="17dp"
                        android:layout_height="19dp"
                        android:src="@mipmap/ic_date" />

                    <TextView
                        android:id="@+id/tv_year"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="-2dp"
                        android:textSize="@dimen/text_12_sp" />
                </LinearLayout>


                <TextView
                    android:id="@+id/tv_mouth_day"
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_alignParentEnd="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginEnd="20dp"
                    android:layout_marginStart="@dimen/dp_5"
                    android:gravity="center"
                    android:text="12-25/12-25"
                    android:textSize="@dimen/text_12_sp" />

            </RelativeLayout>

            <View
                android:layout_width="@dimen/dp_1"
                android:layout_height="match_parent"
                android:background="@color/bgColor" />

            <TextView
                android:id="@+id/tv_next_day"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="1"
                android:background="@color/white"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_1"
                android:paddingLeft="@dimen/dp_1"

                android:paddingRight="@dimen/dp_1"
                android:text="后一天"
                android:textSize="@dimen/text_12_sp" />


            <RelativeLayout
                android:id="@+id/day_nextg"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_marginRight="0.5dp"
                android:layout_weight="3"
                android:background="@color/white"
                android:orientation="vertical"
                android:visibility="gone" />

        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bgColor" />

        <LinearLayout
            android:id="@+id/ll_middle"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:background="@color/bgColor"
            android:orientation="horizontal">

            <LinearLayout
                android:id="@+id/ll_type"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_note_childtype"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="类型"
                    android:textColor="@color/color_gray_666666" />

                <ImageView
                    android:id="@+id/iv_type_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@mipmap/img_triangle_down" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/color_gray_999999">

            </View>

            <LinearLayout
                android:id="@+id/ll_all"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_note_allCode"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/note_status_all"
                    android:textColor="@color/color_gray_666666" />

                <ImageView
                    android:id="@+id/iv_all_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@mipmap/img_triangle_down" />
            </LinearLayout>


            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/color_gray_999999">

            </View>

            <LinearLayout
                android:id="@+id/ll_balance"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_yinkui_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/note_status_last"
                    android:textColor="@color/color_gray_666666" />

                <ImageView
                    android:id="@+id/iv_balance_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@mipmap/img_down_up" />
            </LinearLayout>

            <View
                android:layout_width="0.1dp"
                android:layout_height="match_parent"
                android:background="@color/color_gray_999999">

            </View>

            <LinearLayout
                android:id="@+id/ll_time"
                android:layout_width="0dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:gravity="center">

                <TextView
                    android:id="@+id/tv_time_sort"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_centerInParent="true"
                    android:drawablePadding="@dimen/dp_10"
                    android:gravity="center"
                    android:text="@string/note_status_time"
                    android:textColor="@color/color_gray_666666" />

                <ImageView
                    android:id="@+id/iv_time_click"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="@dimen/dp_8"
                    android:src="@mipmap/img_down_up" />
            </LinearLayout>
        </LinearLayout>

        <View
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_1"
            android:background="@color/bgColor" />
    </LinearLayout>

    <com.scwang.smartrefresh.layout.SmartRefreshLayout
        android:id="@+id/srl_content"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="88dp"
        app:srlEnableLoadMore="false"
        app:srlEnableOverScrollDrag="true"
        app:srlEnableRefresh="true">

        <android.support.v7.widget.RecyclerView
            android:id="@+id/rv_content"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_behavior="@string/appbar_scrolling_view_behavior">

        </android.support.v7.widget.RecyclerView>
    </com.scwang.smartrefresh.layout.SmartRefreshLayout>

    <RelativeLayout
        android:id="@+id/rl_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:background="@color/game_record_bootom_color"
        android:paddingTop="@dimen/dp_3"
        android:layout_marginBottom="-10dp"
        app:layout_behavior="@string/bye_burger_bottom_behavior">

        <TextView
            android:id="@+id/tv_total"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:padding="10dp"
            android:text="合计:"
            android:layout_centerVertical="true"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />

        <ImageView
            android:id="@+id/iv_author"
            android:layout_width="25dp"
            android:layout_height="70dp"
            android:layout_alignParentRight="true"
            android:layout_marginRight="@dimen/dp_10"
            android:layout_marginTop="4dp"
            android:paddingBottom="45dp"
            android:src="@mipmap/ic_up"
            android:visibility="gone" />

        <LinearLayout
            android:id="@+id/ll_one"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/tv_total"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_in_one"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_one"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="总存款:"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_one_show"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="- -" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_in_three"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_three"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="投注额:"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_three_show"
                    android:layout_width="130dp"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="- -"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toEndOf="@+id/ll_one"
            android:layout_centerVertical="true"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_in_two"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_two"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_toEndOf="@+id/tv_total"
                    android:text="总取额:"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_two_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:ellipsize="end"
                    android:lines="1"
                    android:text="- -" />
            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_in_four"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="4dp"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/tv_four"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="中奖额:"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="@dimen/sp_12" />

                <TextView
                    android:id="@+id/tv_four_show"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="4dp"
                    android:text="- -"
                    android:textColor="@color/colorPrimary" />
            </LinearLayout>


        </LinearLayout>
        <Space
            android:layout_width="match_parent"
            android:layout_height="15dp"
            android:layout_below="@+id/tv_total"/>
    </RelativeLayout>
</android.support.design.widget.CoordinatorLayout>