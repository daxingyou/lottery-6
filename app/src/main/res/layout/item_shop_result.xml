<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_upper"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/shop_result_upper"/>

    <TextView
        android:id="@+id/play_name"
        android:layout_below="@+id/iv_upper"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textColor="@color/order_result_red"
        android:textSize="@dimen/text_15_sp"
        android:paddingTop="@dimen/dp_5"
        android:paddingBottom="@dimen/dp_10"
        android:text="重庆时时彩"/>
    <ImageView
        android:id="@+id/iv_center"
        android:layout_below="@+id/play_name"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:src="@mipmap/shop_result_center"/>
    <TextView
        android:id="@+id/tv_which_expect"
        android:layout_below="@+id/iv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_999999"
        android:textSize="@dimen/text_12_sp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:text="第8008208820期"/>

    <TextView
        android:id="@+id/tv_bet_time"
        android:layout_below="@+id/iv_center"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_999999"
        android:textSize="@dimen/text_12_sp"
        android:layout_alignParentRight="true"
        android:paddingRight="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:text="2017-01-01 14:39:09"/>

    <TextView
        android:id="@+id/tv_play_type_name"
        android:layout_below="@+id/tv_which_expect"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_10"
        android:paddingLeft="@dimen/dp_35"
        android:textColor="@color/order_result_red"
        android:textSize="@dimen/text_17_sp"
        android:text="定位胆"
        />
    <TextView
        android:id="@+id/tv_bet_num"
        android:layout_below="@+id/tv_play_type_name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@color/color_gray_333333"
        android:textSize="@dimen/text_14_sp"
        android:text="|||6"
        />
    <TextView
        android:id="@+id/tv_bet_info"
        android:layout_below="@+id/tv_bet_num"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:paddingTop="@dimen/dp_1"
        android:paddingLeft="@dimen/dp_20"
        android:textColor="@color/color_gray_333333"
        android:textSize="@dimen/text_14_sp"
        android:text="@string/the_times_money"
        />

    <TextView
        android:id="@+id/tv_note_number"
        android:layout_below="@+id/tv_bet_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_999999"
        android:textSize="@dimen/text_12_sp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_5"
        android:text="@string/note_number"/>

    <TextView
        android:id="@+id/tv_order_number"
        android:layout_below="@+id/tv_note_number"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/color_gray_999999"
        android:textSize="@dimen/text_12_sp"
        android:paddingLeft="@dimen/dp_15"
        android:paddingTop="@dimen/dp_2"
        android:text="@string/order_number_"/>

    <ImageView
        android:id="@+id/iv_bottom"
        android:layout_below="@+id/tv_order_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@mipmap/shop_result_bottom"/>
</RelativeLayout>