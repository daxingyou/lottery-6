            android:gravity="center"
            android:textColor="@color/open_item_text"
            android:text="5"/>
        <TextView
            android:id="@+id/tv_number_5_tag"
            android:layout_width="15dp"
            android:layout_height="15dp"
            android:textSize="@dimen/text_10_sp"
            android:textColor="@color/open_item_text"
            android:background="@drawable/shape_layout_basic_trend_number_tag"
            android:gravity="center"
            android:text="1"
            android:visibility="gone"/>
    </FrameLayout>

    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/open_item_text"/>

    <FrameLayout
        android:layout_width="0dp"
        android:layout_weight="1"
        android:layout_height="match_parent">
        <TextView
            android:id="@+id/tv_number_6"
