<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.dawoo.lotterybox.view.activity.team.TeamBillRecordActivity">
    <include layout="@layout/layout_custom_header_view"/>
    <android.support.design.widget.TabLayout
        android:layout_width="match_parent"
        app:tabSelectedTextColor="@color/history_item_blue"
        app:tabTextColor="@color/color_gray_333333"
        android:background="@color/white"
        app:tabIndicatorColor="@color/history_item_blue"
        android:layout_height="33dp"
        android:id="@+id/tb_bill">

    </android.support.design.widget.TabLayout>
    <android.support.v4.view.ViewPager
        android:id="@+id/vp_team_bill_content"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1">

    </android.support.v4.view.ViewPager>
</LinearLayout>
