<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:id="@+id/lhc_ll"
    android:background="@color/sm_result_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/lhc_issue"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center"
        android:layout_gravity="center_vertical"
        android:text="期号"
        android:textColor="@color/text_blue"
        android:textSize="@dimen/sp_14" />
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@mipmap/img_qishu" />
    <LinearLayout
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:gravity="center"
        android:orientation="vertical"
        >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sm_code_0"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_1"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_2"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_3"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_4"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_5"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:text="+"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sm_code_6"
                    style="@style/SmTvStytle"
                    android:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginBottom="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sm_code_name_0"
                    style="@style/SmCodeNameStytle"
                    android:text="龙" />

                <TextView
                    android:id="@+id/sm_code_name_1"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_name_2"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_name_3"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_name_4"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_name_5"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/sm_code_name_6"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />
            </LinearLayout>

    </LinearLayout>
</LinearLayout>