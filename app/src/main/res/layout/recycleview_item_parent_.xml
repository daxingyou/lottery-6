<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/rl_lottery_type"
    android:layout_width="match_parent"
    android:layout_height="75dp"
    android:background="@color/white">

    <ImageView
        android:id="@+id/iv_down_arrow"
        android:layout_width="18dp"
        android:layout_height="10dp"
        android:layout_alignParentBottom="true"
        android:layout_gravity="center_horizontal"
        android:layout_marginBottom="-3dp"
        android:layout_marginLeft="39.5dp"
        android:src="@mipmap/hall_fragment_aoconer"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="75dp"
        android:orientation="vertical"
        android:paddingBottom="@dimen/dp_10"
        android:paddingLeft="21dp"
        android:paddingTop="@dimen/dp_10">

        <LinearLayout
            android:id="@+id/fl_lottery_icon"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/iv_lottery_icon"
                android:layout_width="55dp"
                android:layout_height="55dp"
                android:src="@mipmap/img_pk10" />

        </LinearLayout>


        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="12dp"
            android:layout_toEndOf="@id/fl_lottery_icon"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_lottery_type_name"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="时时彩"
                android:textColor="@color/color_gray_333333"
                android:textSize="@dimen/text_15_sp" />

            <TextView
                android:id="@+id/tv_lottery_frequency"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tv_lottery_type_name"
                android:layout_marginTop="4dp"
                android:hint="高频彩"
                android:textColor="@color/color_gray_999999"
                android:textSize="@dimen/text_15_sp" />
        </LinearLayout>
    </RelativeLayout>


</RelativeLayout>