<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:layout_alignParentBottom="true"
    android:background="@color/ll_bottom_bg">
    <LinearLayout
        android:id="@+id/ll_bottom_menu"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:animateLayoutChanges="true"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_bet_info"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:background="@color/bet_info_text_bg"
            android:visibility="gone"/>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="@dimen/ssc_layout_bottom_height">
            <TextView
                android:id="@+id/tv_computer_select"
                android:layout_width="60dp"
                android:layout_height="36dp"
                android:layout_centerVertical="true"
                android:gravity="center"
                android:layout_marginLeft="@dimen/dp_20"
                android:text="@string/machine_selection"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16_sp"
                android:background="@drawable/shape_tv_clear_empty_bg"/>

            <TextView
                android:id="@+id/tv_setting_special"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toLeftOf="@+id/et_multiple"
                android:layout_centerVertical="true"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/text_16_sp"
                android:text="@string/tv_setting_special"
                android:background="@mipmap/img_setting_special"
                android:gravity="center"
                android:layout_marginRight="@dimen/dp_8"
                />

            <TextView
                android:id="@+id/et_multiple"
                android:layout_width="90dp"
                android:layout_height="36dp"
                android:layout_centerInParent="true"
                android:textColor="@color/black"
                android:textSize="@dimen/text_16_sp"
                android:gravity="center"
                android:background="@drawable/shape_tv_clear_empty_bg"/>

            <TextView
                android:layout_toRightOf="@+id/et_multiple"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/times"
                android:textColor="@color/black"
                android:textSize="@dimen/text_17_sp"
                android:layout_centerVertical="true"
                android:paddingLeft="@dimen/dp_8"/>

            <TextView
                android:id="@+id/tv_place_order"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:gravity="center"
                android:text="@string/betting"
                android:textColor="@color/white"
                android:textSize="@dimen/text_17_sp"
                android:layout_alignParentRight="true"
                android:enabled="false"
                android:background="@drawable/selector_ssca_submit_bt_bg"/>
        </RelativeLayout>
    </LinearLayout>



</LinearLayout>