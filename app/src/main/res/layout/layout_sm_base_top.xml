<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/sm_bg"
    android:orientation="horizontal">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/sm_bg"
        android:orientation="horizontal">

        <LinearLayout
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="3"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_periods"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="第20179984期"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_12_sp" />

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sm_code_0"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_1"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_2"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_3"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_4"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_5"
                    style="@style/SmTvStytle"
                    android:text="1" />

                <TextView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:text="+"
                    android:textColor="@color/text_blue"
                    android:textSize="20sp"
                    android:textStyle="bold" />

                <TextView
                    android:id="@+id/sm_code_6"
                    style="@style/SmTvStytle"
                    android:text="1" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:paddingBottom="@dimen/dp_5"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/sm_code_name_0"
                    style="@style/SmCodeNameStytle"
                    android:text="龙" />

                <TextView
                    android:id="@+id/sm_code_name_1"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_name_2"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_name_3"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_name_4"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:id="@+id/sm_code_name_5"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />

                <TextView
                    android:layout_width="@dimen/dp_28"
                    android:layout_height="@dimen/dp_28"
                    android:layout_margin="0dp"
                    android:gravity="center"
                    android:visibility="invisible" />

                <TextView
                    android:id="@+id/sm_code_name_6"
                    style="@style/SmCodeNameStytle"
                    android:text="1" />
            </LinearLayout>

        </LinearLayout>

        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#ff062f3a" />
        <View
            android:layout_width="@dimen/dp_1"
            android:layout_height="match_parent"
            android:background="#ff4b9cb7" />

        <LinearLayout
            android:layout_width="0dp"
            android:paddingTop="@dimen/dp_5"
            android:paddingBottom="@dimen/dp_3"
            android:layout_height="wrap_content"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"
            android:gravity="center_horizontal"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_now_stage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="第23265445期"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_10_sp" />

            <TextView
                android:id="@+id/tv_now_stage_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:text="截止"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_12_sp" />

            <com.dawoo.lotterybox.view.view.TimeTextView
                android:id="@+id/sm_timer"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp_4"
                android:singleLine="true"
                android:text="10:25"
                android:textColor="@color/text_blue"
                android:textSize="@dimen/text_23_sp" />

        </LinearLayout>
    </LinearLayout>
    <View
        android:id="@+id/sm_drashes_0"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/white_dashes_line"
        android:layout_marginTop="@dimen/dp_5"
        />
    <View
        android:id="@+id/sm_drashes_1"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@drawable/white_dashes_line"
        android:layout_gravity="bottom"
        android:layout_marginBottom="@dimen/dp_5"
        />
</FrameLayout>