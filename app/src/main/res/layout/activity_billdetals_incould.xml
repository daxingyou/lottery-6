<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/billing_details_inculd"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="44dp"
        android:background="@color/white"
        android:orientation="horizontal">


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="3"
            android:background="@color/sharegifs_top_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/textView3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="前一天"
                android:textSize="@dimen/text_12_sp" />

            <TextView
                android:id="@+id/textView4"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView3"
                android:gravity="center"
                android:text="礼金 0.00"
                android:textColor="@color/sharegifs_top_text"
                android:textSize="@dimen/text_12_sp" />
        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="0.5dp"
            android:layout_marginRight="0.5dp"
            android:layout_weight="5"
            android:background="@color/sharegifs_top_color"
            android:orientation="horizontal">

            <ImageView
                android:id="@+id/imageView"
                app:srcCompat="@mipmap/share_gifs_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentStart="true"
                android:layout_centerVertical="true"
                android:layout_marginStart="20dp" />

            <TextView
                android:id="@+id/textView5"

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_marginLeft="30dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="2017-12-25"
                android:textSize="@dimen/text_12_sp" />

            <TextView
                android:id="@+id/textView7"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/textView5"
                android:layout_marginLeft="30dp"
                android:layout_toEndOf="@+id/imageView"
                android:text="礼金 0.00"
                android:textColor="@color/sharegifs_top_text"
                android:textSize="@dimen/text_12_sp" />
        </RelativeLayout>


        <RelativeLayout
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginRight="0.5dp"
            android:layout_weight="3"
            android:background="@color/sharegifs_top_color"
            android:orientation="vertical">

            <TextView
                android:id="@+id/next_day"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="5dp"
                android:text="后一天"
                android:textSize="@dimen/text_12_sp" />

            <TextView
                android:id="@+id/next_money"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/next_day"
                android:gravity="center"
                android:text="礼金 0.00"
                android:textColor="@color/sharegifs_top_text"
                android:textSize="@dimen/text_12_sp" />
        </RelativeLayout>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="35dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/game_record_species_rv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/game_record_species_tv"
                style="@style/game_record_first"
                android:text="@string/game_record_species" />
        </RelativeLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_gray_999999" />

        <RelativeLayout
            android:id="@+id/game_record_betting_total_rv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/game_record_betting_total_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/img_up_down"
                android:gravity="center"
                android:text="@string/game_record_betting_total"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/game_record_betting_total_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/img_down_up"
                android:gravity="center"
                android:text="@string/game_record_betting_total"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_gray_999999" />

        <RelativeLayout
            android:id="@+id/game_record_winning_amount_rb"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/game_record_winning_amount_tv_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/img_up_down"
                android:gravity="center"
                android:text="@string/game_record_winning_amount"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/game_record_winning_amount_tv_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/img_down_up"
                android:gravity="center"
                android:text="@string/game_record_winning_amount"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />
        </RelativeLayout>

        <View
            android:layout_width="0.1dp"
            android:layout_height="match_parent"
            android:background="@color/color_gray_999999" />

        <RelativeLayout
            android:id="@+id/game_record_profit_and_loss_rv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/game_record_profit_and_loss_tv_v"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/img_up_down"
                android:gravity="center"
                android:text="@string/game_record_profit_and_loss"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/game_record_profit_and_loss_tv_g"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerInParent="true"
                android:drawablePadding="@dimen/dp_10"
                android:drawableRight="@mipmap/img_down_up"
                android:gravity="center"
                android:text="@string/game_record_profit_and_loss"
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_12"
                android:visibility="gone" />
        </RelativeLayout>
    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/color_gray_999999" />
</LinearLayout>
