<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor"
    android:orientation="vertical">

    <com.dawoo.lotterybox.view.view.HeaderView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />


    <android.support.v7.widget.CardView

        android:id="@+id/bandcardscuessActivity"
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginTop="23dp"
        android:visibility="visible"
        card:cardBackgroundColor="@color/color_gray_EEEEEE"
        card:cardCornerRadius="10dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="107dp"
            android:orientation="vertical">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="@color/white">

                <ImageView
                    android:id="@+id/card_iamge"
                    android:layout_width="22dp"
                    android:layout_height="30dp"
                    android:layout_alignParentStart="true"
                    android:layout_alignParentTop="true"
                    android:layout_marginStart="20dp"
                    android:layout_marginTop="14dp"
                    card:srcCompat="@mipmap/zhaoshangcard" />

                <TextView
                    android:id="@+id/card_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/card_iamge"
                    android:layout_marginStart="5dp"
                    android:layout_toEndOf="@+id/card_iamge"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="@dimen/text_12_sp" />

                <TextView
                    android:id="@+id/card_number"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignStart="@+id/card_iamge"
                    android:layout_below="@+id/card_iamge"
                    android:layout_marginTop="22dp"
                    android:textSize="@dimen/text_15_sp" />

                <TextView
                    android:id="@+id/user_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignTop="@+id/card_name"
                    android:layout_marginRight="20dp"
                    android:layout_marginTop="8dp"
                    android:layout_toStartOf="@+id/card_unbind"
                    android:textColor="@color/color_gray_333333"
                    android:textSize="@dimen/text_14_sp" />

                <TextView
                    android:id="@+id/card_type"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignBottom="@+id/card_iamge"
                    android:layout_alignStart="@+id/card_name"
                    android:maxLines="6"
                    android:textSize="@dimen/text_9_sp" />

                <Button
                    android:id="@+id/card_unbind"
                    android:layout_width="70dp"
                    android:layout_height="35dp"
                    android:layout_alignParentEnd="true"
                    android:layout_centerVertical="true"
                    android:layout_marginRight="22dp"
                    android:layout_marginTop="30dp"
                    android:background="@drawable/band_card_scuess"
                    android:text="解绑"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_14_sp" />

            </RelativeLayout>
        </LinearLayout>
    </android.support.v7.widget.CardView>


    <LinearLayout
        android:id="@+id/add_card"
        android:layout_width="match_parent"
        android:layout_height="46dp"
        android:layout_marginTop="24dp"
        android:visibility="gone"
        android:background="@color/white"
        android:orientation="horizontal">

        <ImageView
            android:layout_width="26dp"
            android:layout_height="26dp"
            android:layout_gravity="center_vertical"
            android:layout_marginLeft="10dp"
            android:src="@mipmap/tixian_add" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:text="@string/add_card"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/text_14_sp" />


    </LinearLayout>


</LinearLayout>
