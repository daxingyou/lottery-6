<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:padding="@dimen/dp_15"
    android:orientation="vertical">
    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="@drawable/shape_corn_dialog_bg"
        android:layout_height="wrap_content">
        <TextView
            android:layout_width="match_parent"
            android:layout_height="45dp"
            android:background="@drawable/shape_dialog_title_bg"
            android:text="提交成功"
            android:textSize="@dimen/text_16_sp"
            android:textColor="@color/white"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_20"
            android:textSize="@dimen/text_14_sp"
            android:textColor="@color/color_gray_666666"
            android:id="@+id/deposit_amount"
            android:text="正在等待系统处理"
            android:gravity="center"
            />
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_8"
            android:textSize="@dimen/text_14_sp"
            android:textColor="@color/color_gray_666666"
            android:id="@+id/fee_amount"
            android:text="请注意查看钱包余额！"
            android:gravity="center"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_margin="@dimen/dp_20"
            android:orientation="horizontal"
            android:layout_height="40dp">
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/cancel_tv"
                android:textSize="@dimen/sp_14"
                android:text="查看资金记录"
                android:gravity="center"
                android:textColor="@color/colorPrimary"
                android:background="@drawable/shape_corn_dialog_btn_bg_white"
                />
            <View
                android:layout_width="@dimen/dp_25"
                android:layout_height="wrap_content"/>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:id="@+id/sure_tv"
                android:textSize="@dimen/sp_14"
                android:text="再存一次"
                android:gravity="center"
                android:textColor="@color/white"
                android:background="@drawable/shape_corn_dialog_btn_bg_oragin"
                />
        </LinearLayout>
    </LinearLayout>
    <ImageView
        android:id="@+id/close_iv"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:padding="@dimen/dp_4"
        android:src="@mipmap/dialog_close_icon"
        android:layout_marginTop="25dp"
        android:layout_gravity="center_horizontal"
        />
</LinearLayout>