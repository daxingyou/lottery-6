<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:paddingEnd="@dimen/activity_horizontal_margin"
    android:paddingStart="@dimen/activity_horizontal_margin">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">


        <TextView
            android:id="@+id/ssc_expect"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_14_sp" />

        <TextView
            android:id="@+id/ssc_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="10dp"
            android:layout_toEndOf="@id/ssc_expect"
            android:textColor="@color/color_gray_666666"
            android:textSize="@dimen/text_14_sp" />


    </RelativeLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingEnd="2dp">

        <TextView
            android:id="@+id/keno_xy28_ball_one_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_two_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_three_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_four_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_five_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_six_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_seven_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_eight_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_nine_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_ten_tv"
            style="@style/rcd_item_keno_style" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:orientation="horizontal"
        android:paddingEnd="2dp">

        <TextView
            android:id="@+id/keno_xy28_ball_eleven_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_twelve_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_thirteen_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_fourteen_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_fifteen_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_sixteen_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_seventeen_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_eighteen_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_nineteen_tv"
            style="@style/rcd_item_keno_style" />

        <TextView
            android:id="@+id/keno_xy28_ball_twenty_tv"
            style="@style/rcd_item_keno_style" />
    </LinearLayout>


    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="4dp"
        android:layout_marginBottom="4dp"
        android:orientation="horizontal">

        <TextView
            android:id="@+id/single_big_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/text_12_sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="@color/text_color_gray_999999" />

        <TextView
            android:id="@+id/couple_big_small"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/text_12_sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="1dp"
            android:layout_marginStart="1dp"
            android:background="@color/text_color_gray_999999" />

        <TextView
            android:id="@+id/five_go"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />

        <View
            android:layout_width="1dp"
            android:layout_height="@dimen/text_12_sp"
            android:layout_gravity="center_vertical"
            android:layout_marginEnd="5dp"
            android:layout_marginStart="1dp"
            android:background="@color/text_color_gray_999999" />


        <TextView
            android:id="@+id/sum_value"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/rcd_keno_sum_value"
            android:textColor="@color/color_gray_999999"
            android:textSize="@dimen/text_12_sp" />


    </LinearLayout>

</LinearLayout>
