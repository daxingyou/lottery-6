<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="34dp"
    android:background="@color/open_item_bg"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/tv_expect_number"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="5"
        android:gravity="center"
        android:text="@string/no."
        android:textColor="@color/open_item_text" />

    <!--下面这个view不要删-->
    <View
        android:layout_width="3dp"
        android:layout_height="match_parent" />
    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/open_item_text" />


    <TextView
        android:id="@+id/tv_number_1"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="1"
        android:textColor="@color/open_item_text" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/open_item_text" />

    <TextView
        android:id="@+id/tv_number_2"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="2"
        android:textColor="@color/open_item_text" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/open_item_text" />

    <TextView
        android:id="@+id/tv_number_3"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="3"
        android:textColor="@color/open_item_text" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/open_item_text" />


    <TextView
        android:id="@+id/tv_number_4"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="4"
        android:textColor="@color/open_item_text" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/open_item_text" />


    <TextView
        android:id="@+id/tv_number_5"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="5"
        android:textColor="@color/open_item_text" />


    <View
        android:layout_width="1dp"
        android:layout_height="match_parent"
        android:background="@color/open_item_text" />


    <TextView
        android:id="@+id/tv_number_6"
        android:layout_width="0dp"
        android:layout_height="match_parent"
        android:layout_weight="1"
        android:gravity="center"
        android:text="6"
        android:textColor="@color/open_item_text" />


</LinearLayout>