<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/bgColor">

    <com.dawoo.lotterybox.view.view.HeaderView
        android:id="@+id/head_view"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/head_view"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/t_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/mail_account"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_receiver"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_12" />


        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:background="@color/white"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/t_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:text="@string/mail_title"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:text=""
                android:textColor="@color/color_gray_666666"
                android:textSize="@dimen/sp_12" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/t_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/content_mail"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12" />

            <TextView
                android:id="@+id/tv_content"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/t_4"
                android:layout_marginTop="@dimen/dp_15"
                android:ellipsize="end"
                android:gravity="left|top"
                android:lineSpacingExtra="2dp"
                android:maxLines="3"
                android:text=""
                android:textColor="@color/text_color_gray_999999"
                android:textSize="10sp" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="150dp"
            android:layout_marginTop="@dimen/dp_1"
            android:background="@color/white"
            android:padding="@dimen/dp_10">

            <TextView
                android:id="@+id/t_5"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/relay_content"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12" />

            <EditText
                android:id="@+id/et_site_sendMsg"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_above="@+id/tv_num_tip"
                android:layout_below="@+id/t_5"
                android:layout_marginTop="@dimen/dp_10"
                android:background="@drawable/shape_edittext_site_send_msg"
                android:gravity="left"
                android:hint="@string/mail_please_input"
                android:padding="@dimen/dp_4"
                android:text=""
                android:textColor="@color/color_gray_333333"
                android:textColorHint="@color/text_color_gray_999999"
                android:textSize="@dimen/text_12_sp" />

            <TextView
                android:id="@+id/tv_num_tip"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentRight="true"
                android:text="0/200å­—"
                android:textColor="@color/colorPrimary"
                android:textSize="@dimen/sp_12" />
        </RelativeLayout>
    </LinearLayout>

    <Button
        android:id="@+id/b_replay_right_now"
        android:layout_width="120dp"
        android:layout_height="40dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="@dimen/dp_10"
        android:background="@drawable/shape_note_all_mail"
        android:text="@string/reply_mail_right_now"
        android:textColor="@color/white"
        android:textSize="@dimen/dp_15"
        android:visibility="visible" />
</RelativeLayout>
