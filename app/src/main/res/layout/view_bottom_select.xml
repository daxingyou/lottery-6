<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:background="@color/white">
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:text="请选择开户类别"
        android:id="@+id/tv_titleName"
        android:textColor="@color/color_gray_333333"
        android:textSize="@dimen/sp_16"
        android:padding="@dimen/dp_10"/>
    <!--<View-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="1dp"-->
        <!--android:layout_marginLeft="@dimen/dp_10"-->
        <!--android:layout_marginRight="@dimen/dp_10"-->
        <!--android:background="@color/bgColor"/>-->

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginTop="@dimen/dp_40"
        android:id="@+id/rl_agent_select">
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="代理"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/sp_16"/>
        <ImageView
            android:id="@+id/iv_agent_select"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_selected"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp_1"
        android:background="@color/bgColor"
        android:layout_marginLeft="@dimen/dp_10"
        android:layout_marginRight="@dimen/dp_10"/>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="@dimen/dp_10"
        android:layout_marginBottom="@dimen/dp_40"
        android:id="@+id/rl_memeber_select"
        >
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:text="普通会员"
            android:textColor="@color/color_gray_333333"
            android:textSize="@dimen/sp_16"/>
        <ImageView
            android:visibility="gone"
            android:id="@+id/iv_member_select"
            android:layout_width="25dp"
            android:layout_height="25dp"
            android:src="@mipmap/ic_selected"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"/>
    </RelativeLayout>

</LinearLayout>